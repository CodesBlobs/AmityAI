{
  "manifest_version": 3,
  "name": "Amity AI",
  "version": "0.0.1",
  "description": "AI-powered elderly computer assistance with proactive guidance",
  "minimum_chrome_version": "114",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "debugger",
    "scripting",
    "tts",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader.J-db9H7D.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "chunks/amazon.ts.Crt3mSkK.js"
      ],
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.au/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "chunks/ebay-au.ts.CV_YT2J9.js"
      ],
      "matches": [
        "*://*.ebay.com.au/*",
        "*://*.ebay.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "js": [
        "chunks/walmart.ts.KnyQC-L-.js"
      ],
      "matches": [
        "*://*.walmart.com/*",
        "*://walmart.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Amity AI"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.amazon.com.au/*",
        "*://*.amazon.com/*",
        "*://*.ebay.com.au/*",
        "*://*.walmart.com/*"
      ],
      "resources": [
        "sites/amazon.js",
        "sites/ebay-au.js",
        "sites/walmart.js"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/pages/permission/index.html",
        "src/pages/permission/permission.js",
        "chunks/tools.D9zwH9nK.js",
        "chunks/config.CXf-J2WI.js",
        "chunks/index.ts.C2gYro8o.js"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "chunks/amazon.ts.Crt3mSkK.js",
        "chunks/ebay-au.ts.CV_YT2J9.js",
        "chunks/walmart.ts.KnyQC-L-.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
